
{{#foreach posts}}
<article class="post" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="1500">
    {{#if image}}
        <div class="row">
            <div class="container">
                <div class="clearfix">
                    <div class="col-md-1">
                    </div>
                    <div class="col-sm-10 col-md-4">
                        <img class="img-responsive" src="{{image}}" height="270px"  width="355px">
                    </div>
                    <div class="col-sm-10 col-md-6">
                        <div id="head-post">
                            <h1><a href="{{url}}">{{title}}</a></h1>
                            <ul>
                                <li><i class="fa fa-user" aria-hidden="true"></i> <a href="{{url}}"><span class="bleu">{{author}}</span></a></li>
                                <li><i class="fa fa-calendar" aria-hidden="true"> </i> {{date format="DD MMMM YYYY"}}</li>
                                 {{#if tags}}
                                <li> <i class="fa fa-tags " aria-hidden="true "></i> <a href="{{url}} "> {{tags}}</a><li>
                               {{/if}}
                            </ul>
                        </div>
                        <div id="body-post clearfix">
                        <p class="lead"> {{excerpt words="36"}} <a href="{{url}}">&raquo;</a></p>
                         <div class="footer-post">
                                <ul>
                                    <li><span class="special ">Share :</span></li>
                                    <li> <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                        <i class="fa fa-facebook "></i></a>
                                    </li>
                                    <li> <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                        <i class="fa fa-twitter "></i></a>
                                    </li>
                                    <li> <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                        <i class="fa fa-google-plus "></i></a>
                                    </li>
                               </ul>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
         <div class="row">
            <div class="container">
                <div class="clearfix">
                    <div class="col-md-1">
                    </div>
                    <div class="col-sm-10 col-md-10">
                        <div id="head-post">
                            <h1><a href="{{url}}">{{title}}</a></h1>
                            <ul>
                                <li><i class="fa fa-user" aria-hidden="true"></i> <a href="{{url}}"><span class="bleu">{{author}}</span></a></li>
                                <li><i class="fa fa-calendar" aria-hidden="true"> </i> {{date format="DD MMMM YYYY"}}</li>
                                {{#if tags}}
                                <li> <i class="fa fa-tags " aria-hidden="true "></i> <a href="{{url}} "> {{tags}}</a><li>
                                {{/if}}
                            </ul>
                        </div>
                        <div id="body-post clearfix">
                        <p class="lead"> {{excerpt words="46"}} <a href="{{url}}">&raquo;</a></p>
                         <div class="footer-post">
                                <ul>
                                    <li><span class="special ">Share :</span></li>
                                    <li> <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                                        <i class="fa fa-facebook "></i></a>
                                    </li>
                                    <li> <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                        <i class="fa fa-twitter "></i></a>
                                    </li>
                                    <li> <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                                        onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                        <i class="fa fa-google-plus "></i></a>
                                    </li>
                               </ul>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
</article>
{{/foreach}} {{!-- Previous/next page links - displayed on every page --}}